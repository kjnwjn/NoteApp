<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".NoteActivity">

<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/action_bar_note_deleted_activity_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="100dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_note_deleted_activity_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="@color/color_primary">

    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/note_Deletedtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_note_deleted_activity_activity"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Title" />

    <TextView
        android:id="@+id/note_DeletedtextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_Deletedtitle"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Content" />

<TextView
    android:id="@+id/imageTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/note_DeletedtextContent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:text="Image"
    android:visibility="gone"/>
<ImageView
    android:id="@+id/app_image_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_below="@id/imageTitle"
    android:layout_marginTop="40dp"
    android:scaleType="fitCenter"
    android:src="@drawable/flashlayout" />

<TextView
    android:id="@+id/timeRemind"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app_image_view"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:layout_marginTop="20dp"/>


</RelativeLayout>